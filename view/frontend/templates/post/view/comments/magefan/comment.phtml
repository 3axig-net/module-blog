<?php
/**
 * Blog post comments template
 *
 * @var $block \Magefan\Blog\Block\Post\View\Comments\Magefan\Comment
 */
?>
<?php
    $comment = $block->getComment();
    $numberOfCommentsToDisplay = $block->getNumberOfReplies();
?>
<div class="c-comment c-comment-parent-<?= (int)$comment->getParentId() ?>" <?php if ($comment->getIsHidden()) echo 'style="display:none"' ?>>
    <?php if ($authorImage = $comment->getAuthorImage()) { ?>
    <div class="c-img">
        <img src="<?= $authorImage ?>" alt="<?= $block->escapeHtml($comment->getAuthorName()) ?>">
    </div>
    <?php } ?>
    <div class="c-post c-post-<?= $block->escapeHtml($comment->getId()) ?>" id="c-post-<?= $block->escapeHtml($comment->getId()) ?>">
        <div class="p-name"><?= $block->escapeHtml($comment->getAuthor()->getNickname()) ?></div>
        <div class="p-text"><?= $block->escapeHtml($comment->getText()) ?></div>
        <div class="p-actions">
            <a href="#" class="reply-action" data-comment="<?= /* @noEscape */ $comment->isReply() ? $comment->getParentId() : $comment->getId() ?>" title="<?= __('Reply') ?>"><?= __('Reply') ?></a>
            <span class="publish-date"><?= $block->escapeHtml($comment->getPublishDate('M d, Y H:i')) ?></span>
        </div>
        <?php
            $replies = $block->getRepliesCollection();
            $commentsCount = count($replies);
            if ($commentsCount) {
        ?>
            <div class="p-replies">
                <?php $i = 0 ?>
                <?php foreach ($replies as $reply) { ?>
                    <?php
                        $i++;
                        $reply->setIsHidden($i > $numberOfCommentsToDisplay);
                    ?>
                    <?= $block->escapeHtml($block->setComment($reply)->toHtml()) ?>
                <?php } ?>

                <?php if ($commentsCount > $numberOfCommentsToDisplay) { ?>
                <div class="c-more more-comments-action" data-comment="<?= /* @noEscape */ $comment->getId() ?>">
                    <a href="#" ><?= __('Show more replies in this thread') ?><i></i></a>
                </div>
                <?php } ?>
            </div>
        <?php } ?>
    </div>
</div>